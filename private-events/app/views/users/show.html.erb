<h1><p><%= @user.name %>'s Profile Page</p></h1>

<%= link_to "Home Page", root_url %></br>

<%= link_to "Create New Event", new_event_path %></br>

<% if is_logged_in? %>
	<%= link_to "Sign Out", logout_path, method: "delete" %>
<% end %>

<% if !@past_events.nil? %>
<h3>Past Events</h3>
<ul>
	<% @past_events.each do |event| %>
		<li><%= link_to event.name, event_path(event.id) %></li>
	<% end %>
</ul>
<% end %>

<% if !@upcoming_events.nil? %>
<h3>Upcoming Events</h3>
<ul>
	<% @upcoming_events.each do |event| %>
		<li><%= link_to event.name, event_path(event.id) %></li>
	<% end %>
</ul>
<% end %>



<% if @user.attended_events.any? %>
<h3>Attended Events</h3>
	<ul>
		<%= @user.attended_events.each do |e| %>
			<li><%= e.name %></li>
		<% end %>
	</ul>
<% end %>